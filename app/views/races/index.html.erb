<h1>Listing races</h1>



<% @races.each do |race| %>
<div class="race_info">
	<h3><%= race.name%><h3>
	<%= race.location %><br />
	<%= race.team_id%>
	<span class="edition">
		<%= link_to 'Show', race %> | <%= link_to 'Edit', edit_race_path(race) %> | <%= link_to 'Destroy', race, :confirm => 'Are you sure?', :method => :delete %>
</div>


 
<% end %>

<br />

<%= link_to 'New Race', new_race_path %>
